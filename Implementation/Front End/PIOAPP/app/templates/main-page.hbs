<!-- Sign Up and Log In Buttons -->
<a href="#/registerLogin" id="signUp" class="btn" {{action "registerLogin"}} role="button">Sign Up</a>
<a href="#/registerLogin" id="login" class="btn" {{action "registerLogin"}} role="button">Login</a>

<!-- Carousel -->

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="3000">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>
 
  <!-- Wrapper for slides -->
<div class="carousel">	
  <div class="carousel-inner">
    <div class="item active">
      <img src="/assets/images/Property1.jpg" alt="Property1">
      <div class="carousel-caption">
      	<h3>Individuals</h3>
      </div>
    </div>
    <div class="item">
      <img src="/assets/images/Property2.jpg" alt="Property2">
      <div class="carousel-caption">
      	<h3>Family</h3>
      </div>
    </div>
    <div class="item">
      <img src="/assets/images/Property3.jpg" alt="Property3.jpg">
      <div class="carousel-caption">
      	<h3>Business</h3>
      </div>
    </div>
  </div>
 
  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
	
	</div> 
</div>
<!-- Carousel -->

<!-- Info Tag -->
<div class = "info">
	<div class = "inner-info">
		
		<div id = "view">
			<img img src ="/assets/images/View.png" class = "images">
			<p>View the different property configurations based on user information.</p>
		</div>
		
		<div id ="visualize" >
			<img img src ="/assets/images/Visualize.png" class = "images">
		<p>Visualize the calculated information based on certain property configurations using graphical resources such as graphs and charts.</p>
		</div>
		
		<div id = "compare">
			<img img src ="/assets/images/Compare.png" class = "images">
			<p>Compare two properties to know which one of the two is a better option.</p>
		</div>
		
	</div>
</div>